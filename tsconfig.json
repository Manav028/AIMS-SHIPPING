{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",

    "types": ["node", "express"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
